<resources>
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">#FFffffff</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">#FFdddddd</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- SearchView -->
        <item name="searchViewStyle">@style/MySearchViewStyle</item>
        <item name="actionBarStyle">@style/MyActionBarStyle</item>
        <item name="actionOverflowButtonStyle">@style/MyActionBarOverflow</item>
        <item name="actionBarTabStyle">@style/MyActionBarTabStyle</item>
        <!--<item name="android:buttonStyle">@style/App.ButtonStyle</item>-->
        <!--<item name="actionButtonStyle">@style/MyActionButtonStyle</item>-->
    </style>
    <!--<style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
        <!--&lt;!&ndash;-->
            <!--Theme customizations available in newer API levels can go in-->
            <!--res/values-vXX/styles.xml, while customizations related to-->
            <!--backward-compatibility can go here.-->
        <!--&ndash;&gt;-->
    <!--</style>-->

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="MySearchViewStyle" parent="Widget.AppCompat.Light.SearchView"></style>

    <style name="MyActionBarStyle" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@drawable/action_bar_bg_light</item>
    </style>

    <style name="MyActionBarTabStyle" parent="Widget.AppCompat.Light.ActionBar.TabView">
        <item name="background">@drawable/action_bar_bg_light</item>
    </style>

    <style name="MyActionBarOverflow" parent="Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/action_mode_immersion_more_light</item>
    </style>
    <style name="MyActionButtonStyle" parent="Widget.AppCompat.Light.ActionButton">
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>
    </style>
    <!--<style name="App.ButtonStyle" parent="@android:style/Widget.Button">-->
        <!--<item name="android:minHeight">0dp</item>-->
    <!--</style>-->

    <style name="AppTheme.Translucent" parent="android:style/Theme.Translucent">
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>