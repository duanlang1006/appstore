<resources>
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">#FFffffff</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">#FFdddddd</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- SearchView -->
        <item name="searchViewStyle">@style/MySearchViewStyle</item>
    </style>
    <!--<style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
        <!--&lt;!&ndash;-->
            <!--Theme customizations available in newer API levels can go in-->
            <!--res/values-vXX/styles.xml, while customizations related to-->
            <!--backward-compatibility can go here.-->
        <!--&ndash;&gt;-->
    <!--</style>-->

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView"></style>
    
    <style name="AppTheme.Translucent" parent="android:style/Theme.Translucent">
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>