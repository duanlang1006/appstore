<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Light">
        <!-- Customize your theme here. -->
    </style>

    <style name="ItemTitleText" parent="android:TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/download_item_title</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ItemStatusText" parent="android:TextAppearance.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/download_item_status</item>
    </style>
    <style name="ItemSizeText" parent="android:TextAppearance.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/download_item_size</item>
    </style>

    <style name="DownloadListEmpty">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/download_item_title</item>
    </style>

    <style name="DownloadOptButton" parent="@android:style/Widget.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@drawable/item_button_text_color</item>
        <item name="android:background">@drawable/item_button_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
    </style>
    <!--<item name="android:minHeight">32dp</item>-->
    <!--<item name="android:minWidth">48dp</item>-->

</resources>
