<resources>

    <style name="ItemTitleText" parent="android:TextAppearance.Medium">
        <item name="android:textSize">@dimen/download_text_size</item>
        <item name="android:textColor">@color/download_item_title</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ItemStatusText" parent="android:TextAppearance.Small">
        <item name="android:textSize">@dimen/download_status_text_size</item>
        <item name="android:textColor">@color/download_item_status</item>
    </style>

    <style name="ItemSizeText" parent="android:TextAppearance.Small">
        <item name="android:textSize">@dimen/download_info_text_size</item>
        <item name="android:textColor">@color/download_item_size</item>
    </style>

    <style name="DownloadListEmpty">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/download_item_title</item>
    </style>

    <style name="DownloadOptButton" parent="@android:style/Widget.Button">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/apklist_btn_text_color</item>
        <item name="android:background">@drawable/btn_bg_rect_light</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:minHeight">@dimen/download_btn_min_height</item>
        <item name="android:minWidth">@dimen/download_btn_min_width</item>
    </style>
    <!--<item name="android:minHeight">32dp</item>-->
    <!--<item name="android:minWidth">48dp</item>-->

</resources>
