<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/action_bar_bg_light"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvNone1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2" />

    <Button
        android:id="@+id/btnShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:background="@drawable/action_bar_bg_light"
        android:drawableTop="@drawable/sharebutton_selector"
        android:enabled="false"
        android:text="@string/share_btn"
        android:textColor="@color/lightgrey"
        android:textSize="@dimen/bottom_buttom_size" />

    <TextView
        android:id="@+id/tvNone2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:background="@drawable/action_bar_bg_light"
        android:drawableTop="@drawable/deletebutton_selector"
        android:text="@string/delete_btn"
        android:textColor="@color/black"
        style="@style/CustomDownLoadButton"
        android:textSize="@dimen/bottom_buttom_size" />

    <TextView
        android:id="@+id/tvNone3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" />
</LinearLayout>
