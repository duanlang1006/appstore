<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin">


    <TextView
        android:id="@+id/emptylistview"
        style="@style/TextAppearance.BlankPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/abc_text_size_title_material"
        android:layout_marginTop="@dimen/abc_text_size_title_material"
        android:drawableTop="@drawable/content_empty_icon"
        android:text="@string/no_downloads"
        android:visibility="gone" />


    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emptylistview"
        android:choiceMode="singleChoice"
        android:divider="#00FFFFFF"
        android:dividerHeight="0dp"
        android:footerDividersEnabled="true" />
    <!--android:footerDividersEnabled="false"-->

</RelativeLayout>