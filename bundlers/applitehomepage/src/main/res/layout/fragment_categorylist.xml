<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/categoryListView"
    android:background="@color/background_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:layout_margin="2dp"
        android:gravity="center_vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ImageView
        android:layout_margin="@dimen/categoryList_icon_margin"
        android:layout_width="@dimen/categoryList_icon_width"
        android:layout_height="@dimen/categoryList_icon_height"
        android:id="@+id/imageViewName"
        android:visibility="visible"
        android:focusable="false"
        android:focusableInTouchMode="false"/>
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">>
            <TextView
                android:layout_width="@dimen/categoryList_name_width"
                android:layout_height="wrap_content"
                android:id="@+id/apkName"
                android:visibility="visible"
                style="@style/categoryListName"/>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/categoryListArrow"
            android:visibility="visible"
            android:background="@drawable/back"
            style="@style/categoryListArrow"/>
    </LinearLayout>
</LinearLayout>
