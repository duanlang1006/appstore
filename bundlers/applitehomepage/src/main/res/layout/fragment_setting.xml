<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        style="@style/Setting_title_style"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/notification" />

    <ImageView
        style="@style/Divided_Line_Style"
        android:layout_width="fill_parent"
        android:layout_height="0.3dp" />

    <LinearLayout
        android:id="@+id/ll_item1_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="50dp"
            android:orientation="vertical">


            <TextView
                style="@style/Default_charactor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/update_notification" />


        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/divided_line_distance"
            android:background="@drawable/setup_wifi_click_bg"></ImageView>

        <!--android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:textSize="16sp"
        android:layout_marginTop="5dp"-->

    </LinearLayout>

    <ImageView
        style="@style/Divided_Line_Style"
        android:layout_width="fill_parent"
        android:layout_height="0.3dp" />

    <TextView
        style="@style/Setting_title_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/other_function" />

    <ImageView
        style="@style/Divided_Line_Style"
        android:layout_width="fill_parent"
        android:layout_height="0.3dp" />

    <LinearLayout
        android:id="@+id/ll_item2_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="50dp"
            android:orientation="vertical">


            <TextView
                style="@style/Default_charactor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/clean_cache" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/clean_cache_detail"
                android:textSize="10dp" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/divided_line_distance"
            android:background="@drawable/setup_wifi_click_bg"></ImageView>

    </LinearLayout>


    <ImageView
        style="@style/Divided_Line_Style"
        android:layout_width="fill_parent"
        android:layout_height="0.3dp" />

    <LinearLayout
        android:id="@+id/ll_item2_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="50dp"
            android:orientation="vertical">

            <TextView
                style="@style/Default_charactor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete_package" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete_package_detail"
                android:textSize="10dp" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/divided_line_distance"
            android:background="@drawable/setup_wifi_click_bg"></ImageView>

    </LinearLayout>


    <ImageView
        style="@style/Divided_Line_Style"
        android:layout_width="fill_parent"
        android:layout_height="0.3dp" />

    <LinearLayout
        android:id="@+id/ll_item2_3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="50dp"
            android:orientation="vertical">


            <TextView
                style="@style/Default_charactor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_picture" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_picture_detail"
                android:textSize="10dp" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/divided_line_distance"
            android:background="@drawable/setup_wifi_click_bg"></ImageView>

    </LinearLayout>

    <ImageView
        style="@style/Divided_Line_Style"
        android:layout_width="fill_parent"
        android:layout_height="0.3dp" />

    <TextView
        android:id="@+id/textViewTitle3"
        style="@style/Setting_title_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="帮助" />

    <ImageView
        style="@style/Divided_Line_Style"
        android:layout_width="fill_parent"
        android:layout_height="0.3dp" />

    <LinearLayout
        android:id="@+id/ll_item3_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="50dp"
            android:orientation="vertical">


            <TextView
                style="@style/Default_charactor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/feedback" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        style="@style/Divided_Line_Style"
        android:layout_width="fill_parent"
        android:layout_height="0.3dp" />

    <LinearLayout
        android:id="@+id/ll_item3_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="50dp"
        android:orientation="horizontal">

        <TextView
            style="@style/Default_charactor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/abort" />

    </LinearLayout>

    <ImageView
        style="@style/Divided_Line_Style"
        android:layout_width="fill_parent"
        android:layout_height="0.3dp" />

</LinearLayout>
