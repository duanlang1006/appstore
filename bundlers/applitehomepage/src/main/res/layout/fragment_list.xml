<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pullDownView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ImageView
        android:layout_margin="5dp"
        android:background="@drawable/buffer"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageViewName"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <LinearLayout
        android:layout_height="fill_parent"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/imageViewName"
        android:orientation="vertical"
        android:layout_alignBottom="@+id/imageViewName">
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="ApkName"
            android:id="@+id/textView"
            android:visibility="visible"
            android:textSize="16dp"
            android:textColor="#ff000000"
            android:textStyle="bold"
            android:ellipsize="end"
            android:layout_below="@+id/imageViewName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:focusable="false"
            android:focusableInTouchMode="false"/>
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingbar_Indicator"
            style="?android:attr/ratingBarStyleSmall"
            android:numStars="5"
            android:focusable="false"
            android:focusableInTouchMode="false"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView2"
            android:visibility="visible"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/ratingbar_Indicator"
            android:layout_below="@+id/textView"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

    </LinearLayout>
    <com.mit.view.ProgressButton
        android:id="@+id/list_item_progress_button"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:max="100"
        app:background="@color/dividing_line"
        app:foreground="@color/progress_foreground"
        app:text="下载"
        app:textcolor="@color/black"
        app:progress="0"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"
        android:focusable="false"/>

</RelativeLayout>