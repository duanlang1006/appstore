<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_launcher_0" />


        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_app_name"
            android:textColor="@color/black"
            android:textSize="@dimen/default_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/app_version_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/default_size"
            android:textStyle="bold" />
    </LinearLayout>


    <ImageView
        style="@style/Divided_Line_Style"
        android:layout_width="fill_parent"
        android:layout_height="0.3dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="~我~们~的~队~伍~像~太~阳~"
        android:textColor="@color/star_color" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/a_delete_soon1" />


    <com.applite.homepage.WheelView
        android:id="@+id/aa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <ImageView
        style="@style/Divided_Line_Style"
        android:layout_width="fill_parent"
        android:layout_height="0.3dp" />

    <TextView
        android:id="@+id/copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Copyright © 2015 Aplite. All Right Reserved"
        android:textColor="@color/black"
        android:textSize="@dimen/apkList_nameText_size"
        android:textStyle="bold" />
</LinearLayout>
