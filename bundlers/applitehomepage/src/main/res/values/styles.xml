<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Light">
        <!-- Customize your theme here. -->
    </style>

    <style name="MoreText" parent="android:TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/loading_text_color</item>
    </style>

    <style name="categoryListName" parent="android:TextAppearance.Medium">
        <item name="android:textSize">@dimen/categoryList_text_size</item>
        <item name="android:textColor">@color/categoryList_text_color</item>
        <item name="android:layout_marginTop">@dimen/categoryList_text_marginTop</item>
        <item name="android:ellipsize">end</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="categoryListArrow">
        <item name="android:layout_marginRight">@dimen/categoryList_image_marginRight</item>
        <item name="android:layout_marginTop">@dimen/categoryList_image_marginTop</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="apkListIcon">
        <item name="android:visibility">visible</item>
        <item name="android:layout_marginBottom">@dimen/apkList_iconMarginBottom</item>
        <item name="android:layout_marginTop">@dimen/apkList_iconMarginTop</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="apkListName">
        <item name="android:visibility">visible</item>
        <item name="android:textSize">@dimen/apkList_nameText_size</item>
        <item name="android:textColor">@color/apkList_apkName_color</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="apkListRating" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_full</item>
        <item name="android:minHeight">12dp</item>
        <item name="android:maxHeight">35dp</item>
    </style>

    <style name="apkListButton" parent="@android:style/Widget.Button">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/apklist_btn_text_color</item>
        <item name="android:background">@drawable/btn_bg_rect_light</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:minHeight">@dimen/apklist_btn_min_height</item>
        <item name="android:minWidth">@dimen/apklist_btn_min_width</item>
    </style>

    <style name="apkListCategorySub">
        <item name="android:visibility">visible</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">@color/apkList_category_color</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="apkListSize">
        <item name="android:visibility">visible</item>
        <item name="android:textColor">@color/apkList_size_color</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="personalListText">
        <item name="android:textColor">@color/personal_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="Setting_title_style">
        <item name="android:layout_marginTop">@dimen/default_title_margintop</item>
        <item name="android:layout_marginBottom">@dimen/default_title_margintop</item>
        <item name="android:paddingBottom">@dimen/setting_distance_from_title_to_bottom</item>
        <item name="android:textColor">@color/title_grey</item>
        <item name="android:textSize">@dimen/setting_title_size</item>
    </style>

    <style name="Divided_Line_Style">
        <item name="android:layout_marginLeft">@dimen/divided_line_distance</item>
        <item name="android:layout_marginRight">@dimen/divided_line_distance</item>
        <item name="android:background">@color/divided_line</item>
    </style>

    <style name="Default_charactor">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
    <style name="TwoLineStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginBottom">@dimen/divided_line_distance</item>
        
    </style>

</resources>
