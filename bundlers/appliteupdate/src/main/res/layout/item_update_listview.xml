<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/hotword_box"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_update_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:src="@drawable/apk_icon_defailt_img" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_update_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="QQ"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/item_update_versionname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="v1.0-v1.2"
                android:textColor="@color/dividing_line" />

            <TextView
                android:id="@+id/item_update_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.6MB"
                android:textColor="@color/dividing_line" />
        </LinearLayout>

        <Button
            android:id="@+id/item_update_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/install_button_bg"
            android:padding="5dp"
            android:text="@string/install"
            android:textColor="@color/install_button_sel" />
    </LinearLayout>
</LinearLayout>
