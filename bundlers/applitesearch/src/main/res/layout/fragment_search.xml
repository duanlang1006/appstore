<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.mit.search.SearchFragment">

    <LinearLayout
        android:padding="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:layout_gravity="center_vertical"
            android:id="@+id/search_back"
            android:background="@drawable/back_bg"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:layout_gravity="center_vertical"
                android:id="@+id/search_et"
                android:singleLine="true"
                android:maxLength="10"
                android:textColor="@color/black"
                android:layout_width="fill_parent"
                android:layout_height="40dp" />

            <ImageView
                android:layout_alignParentRight="true"
                android:id="@+id/search_delete"
                android:background="@drawable/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <ImageButton
            android:layout_gravity="center_vertical"
            android:id="@+id/search_search"
            android:background="@drawable/search_bg"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>

    <!--<FrameLayout
        android:id="@+id/search_fl"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"></FrameLayout>-->

    <!--在线热词LinearLayout-->
    <LinearLayout
        android:visibility="gone"
        android:gravity="center"
        android:id="@+id/hot_word_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <GridView
            android:id="@+id/search_gv"
            android:numColumns="3"
            android:verticalSpacing="10dp"
            android:horizontalSpacing="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"></GridView>

        <TextView
            android:layout_marginTop="20dp"
            android:background="@color/red"
            android:padding="10dp"
            android:id="@+id/hot_word_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="换一换"
            android:textColor="@color/black" />

    </LinearLayout>

    <ImageView
        android:visibility="gone"
        android:id="@+id/hot_word_no_network"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <!--搜索显示数据的ListView-->
    <ListView
        android:visibility="gone"
        android:id="@+id/search_listview"
        android:divider="@color/dividing_line"
        android:fadingEdge="none"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <!--搜索显示预加载的ListView-->
    <ListView
        android:visibility="gone"
        android:id="@+id/search_preload_listview"
        android:fadingEdge="none"
        android:divider="@color/dividing_line"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"></ListView>
</LinearLayout>
