<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/list_item_to_detail"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_margin="5dp"
                android:src="@drawable/apk_default_bg"
                android:id="@+id/list_item_img"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/list_item_name"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="英雄联盟" />

                <RatingBar
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:id="@+id/list_item_xing"
                    style="?android:attr/ratingBarStyleSmall"
                    android:numStars="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_marginRight="5dp"
                        android:id="@+id/list_item_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10000次下载"
                        android:textSize="12sp"
                        android:textColor="@color/black" />

                    <View
                        android:layout_marginRight="5dp"
                        android:layout_width="1dp"
                        android:layout_height="fill_parent"
                        android:background="@color/black" />

                    <TextView
                        android:id="@+id/list_item_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="1000MB"
                        android:textSize="12sp"
                        android:textColor="@color/black" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/list_item_versionname"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="版本：1.000"
            android:textColor="@color/black" />
    </LinearLayout>

    <Button
        android:visibility="gone"
        android:id="@+id/list_item_bt"
        android:layout_marginRight="20dp"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="@string/install"
        android:textColor="@color/black" />

    <com.mit.applite.search.view.ProgressButton
        android:id="@+id/list_item_progress_button"
        android:layout_marginRight="20dp"
        android:layout_width="60dp"
        android:layout_height="40dp"
        app:max="100"
        app:background="@color/dividing_line"
        app:foreground="@color/progress_foreground"
        app:text="@string/install"
        app:textcolor="@color/black"
        app:progress="0"/>

</LinearLayout>
