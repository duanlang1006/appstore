<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.mit.detail.DetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 全局没网络时，以图片提示-->
        <LinearLayout
            android:id="@+id/no_network"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:src="@drawable/post_failure" />

            <Button
                android:id="@+id/refresh_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:background="@drawable/refresh_but_bg"
                android:padding="10dp"
                android:text="@string/refresh"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- 详情页顶部的应用名称，返回-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/detail_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/back_bg" />

            <TextView
                android:id="@+id/detail_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="英雄联盟"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/detail_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/more"
                android:visibility="invisible" />
        </LinearLayout>

        <!-- 应用的名称，Logo，大小，星级-->
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <ImageView
                android:id="@+id/detail_apkimg"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:src="@drawable/apk_icon_defailt_img" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_toRightOf="@id/detail_apkimg"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/detail_name1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="英雄联盟"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <RatingBar
                    android:id="@+id/detail_xing"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:numStars="5" />

                <TextView
                    android:id="@+id/detail_apksize_and_company"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>

        <!-- 应用详情图片上面的线条-->
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/dividing_line" />

        <!-- 应用详情图片，应用详情文字介绍，progressbar-->
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="50dp">

                <LinearLayout
                    android:id="@+id/detail_vp_container"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:clipChildren="false"
                    android:layerType="software"
                    android:orientation="vertical">

                    <HorizontalScrollView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <!-- 在这里设置网络不好时，显示加载的图片-->
                        <LinearLayout
                            android:id="@+id/detail_viewpager_img_ll"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"></LinearLayout>
                    </HorizontalScrollView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/app_detail"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <!-- 详情文字介绍背景图-->
                    <LinearLayout
                        android:id="@+id/detail_contentandpic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/k"
                        android:visibility="gone">

                        <!-- 详情文字内容-->
                        <TextView
                            android:id="@+id/detail_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="15dp"
                            android:ellipsize="end"
                            android:textColor="@color/black" />
                    </LinearLayout>
                </LinearLayout>


            </ScrollView>

            <LinearLayout
                android:id="@+id/detail_download_layout"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:orientation="vertical">

                <ProgressBar
                    android:id="@+id/detail_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="5dp"
                    android:max="100"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/detail_download"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/download"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="@string/install"
                    android:visibility="gone" />

                <!--<com.mit.applite.view.ProgressButton
                    android:id="@+id/detail_progress_button"
                    android:layout_width="300dp"
                    android:layout_height="fill_parent"
                    app:background="@color/green"
                    app:foreground="@color/progress_foreground"
                    app:max="100"
                    app:progress="0"
                    app:text="@string/install"
                    app:textSize="20sp"
                    app:textcolor="@color/black"
                    android:visibility="gone"/>-->
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
