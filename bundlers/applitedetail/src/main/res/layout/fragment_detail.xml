    <LinearLayout
        android:id="@+id/detail_data_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <!-- 应用详情图片，应用详情文字介绍，progressbar-->
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="60dp">

                <LinearLayout
                    android:id="@+id/detail_vp_container"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:clipChildren="false"
                    android:layerType="software"
                    android:orientation="vertical">

                    <!-- 应用的名称，Logo，大小，星级-->
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/detail_apkimg"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_margin="10dp"
                            android:src="@drawable/apk_icon_defailt_img" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/detail_name1"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="英雄联盟"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <RatingBar
                                android:id="@+id/detail_xing"
                                style="@style/apkListRating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:isIndicator="true"
                                android:numStars="5" />

                            <TextView
                                android:id="@+id/detail_apksize_and_company"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dp"
                                android:layout_marginTop="3dp"
                                android:ellipsize="end"
                                android:textColor="@color/dividing_line"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <HorizontalScrollView
                        android:layout_width="fill_parent"
                        android:layout_height="300dp"
                        android:scrollbars="none">

                        <LinearLayout
                            android:id="@+id/detail_viewpager_img_ll"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/detail_hor_default_layout"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="180dp"
                                    android:layout_height="300dp"
                                    android:layout_margin="3dp"
                                    android:background="@drawable/detail_default_img"
                                    android:scaleType="fitXY" />

                                <ImageView
                                    android:layout_width="180dp"
                                    android:layout_height="300dp"
                                    android:layout_margin="3dp"
                                    android:background="@drawable/detail_default_img"
                                    android:scaleType="fitXY" />

                                <ImageView
                                    android:layout_width="180dp"
                                    android:layout_height="300dp"
                                    android:layout_margin="3dp"
                                    android:background="@drawable/detail_default_img"
                                    android:scaleType="fitXY" />
                            </LinearLayout>
                        </LinearLayout>
                    </HorizontalScrollView>

                    <!-- 详情内容-->
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="@string/app_detail"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/detail_content"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:ellipsize="end"
                            android:textColor="@color/dividing_line"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/detail_open_introduce_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="5dp"
                            android:src="@drawable/desc_more" />

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/open_line" />

                    </LinearLayout>

                    <!-- 更新日志内容-->
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="@string/update_log"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/detail_update_log"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:ellipsize="end"
                            android:textColor="@color/dividing_line"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/detail_open_update_log"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="5dp"
                            android:src="@drawable/desc_more" />

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/open_line" />
                    </LinearLayout>

                    <!--<LinearLayout-->
                        <!--android:layout_width="fill_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginLeft="10dp"-->
                        <!--android:layout_marginTop="10dp"-->
                        <!--android:orientation="vertical">-->

                        <!--<TextView-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_marginBottom="5dp"-->
                            <!--android:text="猜你喜欢"-->
                            <!--android:textColor="@color/black"-->
                            <!--android:textSize="16sp"-->
                            <!--android:textStyle="bold" />-->

                        <!--<GridView-->
                            <!--android:id="@+id/detail_gridview"-->
                            <!--android:layout_width="fill_parent"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:horizontalSpacing="1dp"-->
                            <!--android:listSelector="@color/transparent"-->
                            <!--android:numColumns="4"-->
                            <!--android:verticalSpacing="1dp"></GridView>-->

                        <!--<View-->
                            <!--android:layout_width="fill_parent"-->
                            <!--android:layout_height="0.5dp"-->
                            <!--android:layout_marginTop="5dp"-->
                            <!--android:background="@color/open_line" />-->
                    <!--</LinearLayout>-->
                    <include
                        android:id="@+id/similar_view"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        layout="@layout/similar_view" />

                    <!--标签-->
                    <LinearLayout
                        android:id="@+id/detail_state_tag_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/detail_tag_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="标签"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/detail_tag_layout1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"></LinearLayout>

                        <LinearLayout
                            android:id="@+id/detail_tag_layout2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"></LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:id="@+id/detail_download_layout"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/open_line" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
