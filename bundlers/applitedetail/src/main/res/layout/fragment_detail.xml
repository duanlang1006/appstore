<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.mit.detail.DetailFragment">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/dividing_line" />
    <!-- 全局没网络时，以图片提示-->
    <RelativeLayout
        android:id="@+id/no_network"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_weight="0.2">

        <ImageView
            android:id="@+id/off_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffffff"
            android:src="@drawable/no_network"
            android:layout_marginBottom="20dp"
            android:layout_above="@+id/no_network_text"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/no_network_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无网络, 请联网再试试"
            android:textSize="16sp"
            android:textColor="#ff000000"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/refresh_btn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="刷新"
            android:textSize="14sp"
            android:textColor="#ff000000"
            android:background="@color/gray"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/no_network_text"
            android:layout_centerHorizontal="true">
        </Button>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/detail_loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/detail_loading_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="180dp"
            android:src="@drawable/loading_img" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/loading"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/detail_data_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- 应用详情图片，应用详情文字介绍，progressbar-->
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="60dp">

                <LinearLayout
                    android:id="@+id/detail_vp_container"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:clipChildren="false"
                    android:layerType="software"
                    android:orientation="vertical">

                    <!-- 应用的名称，Logo，大小，星级-->
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/detail_apkimg"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_margin="10dp"
                            android:src="@drawable/apk_icon_defailt_img" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/detail_name1"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="英雄联盟"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <RatingBar
                                android:id="@+id/detail_xing"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:numStars="5" />

                            <TextView
                                android:id="@+id/detail_apksize_and_company"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dp"
                                android:layout_marginTop="3dp"
                                android:ellipsize="end"
                                android:textColor="@color/dividing_line"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <HorizontalScrollView
                        android:layout_width="fill_parent"
                        android:layout_height="350dp"
                        android:scrollbars="none">

                        <LinearLayout
                            android:id="@+id/detail_viewpager_img_ll"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"></LinearLayout>
                    </HorizontalScrollView>

                    <!-- 详情内容-->
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="@string/app_detail"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/detail_content"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:ellipsize="end"
                            android:textColor="@color/dividing_line"
                            android:textSize="16sp" />

                        <!--详情内容展开全文-->
                        <LinearLayout
                            android:id="@+id/detail_open_introduce_content_layout"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="vertical">

                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="0.5dp"
                                android:background="@color/open_line" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="10dp"
                                android:text="展开全文"
                                android:textColor="@color/red"
                                android:textSize="18sp" />

                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="0.5dp"
                                android:background="@color/open_line" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- 更新日志内容-->
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="@string/update_log"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/detail_update_log"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:ellipsize="end"
                            android:textColor="@color/dividing_line"
                            android:textSize="16sp" />

                        <!--更新日志展开全文-->
                        <LinearLayout
                            android:id="@+id/detail_open_update_log_layout"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="vertical">

                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="0.5dp"
                                android:background="@color/open_line" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="10dp"
                                android:text="展开全文"
                                android:textColor="@color/red"
                                android:textSize="18sp" />

                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="0.5dp"
                                android:background="@color/open_line" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:id="@+id/detail_download_layout"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/open_line" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
