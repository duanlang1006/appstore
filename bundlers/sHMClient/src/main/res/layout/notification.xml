<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
       >

    <RelativeLayout    
                android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/push_stat"
        >
         <RelativeLayout    
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        >
	        <ImageView android:id="@+id/notificationImage1"
	                android:layout_width="24dip" 
	                android:layout_height="24dip"
	         		android:paddingLeft="5dp"
	                android:src="@android:drawable/stat_sys_download"
        />
         <TextView android:id="@+id/notificationTitle1"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/notificationImage1"
				android:textSize="17dp"
                android:paddingLeft="8dp"
               android:textColor="#FF000000"
        />
        <TextView android:id="@+id/notificationdes"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                android:layout_below="@id/notificationImage1"
				android:textSize="15dp"
                android:paddingLeft="8dp"
                 android:paddingRight="20dp"
                android:textColor="#FF000000"
                android:lines="1"
              
        />
                <TextView android:id="@+id/notificationtime"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/notificationTitle1"
				android:gravity="right"
				android:layout_alignParentRight="true"
				android:textSize="15dp"
                android:paddingRight="2dp"
               android:textColor="#FF000000"
	        />
        </RelativeLayout>  
     </RelativeLayout>       
</RelativeLayout>