<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl"
        android:background="#eeeeee"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_otherpay_tip"
            style="@style/otherPayTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/otherpaytips" />

        <LinearLayout
            android:id="@+id/tv_otherpay_one"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buttom_item_bg"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_title1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:padding="10dp"
                android:src="@drawable/icon_callbank" />

            <LinearLayout
                android:id="@+id/tv_one"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_top"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tv_buttom"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line_dot" >
        </ImageView>

        <LinearLayout
            android:id="@+id/tv_otherpay_two"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buttom_item_bg"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_title2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:padding="10dp"
                android:src="@drawable/icon_callbank" />

            <LinearLayout
                android:id="@+id/tv_one"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_top"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/tv_buttom"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line_dot" >
        </ImageView>

        <LinearLayout
            android:id="@+id/tv_otherpay_three"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buttom_item_bg"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_title3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:padding="10dp"
                android:src="@drawable/icon_callbank" />

            <LinearLayout
                android:id="@+id/tv_one"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_top"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/tv_buttom"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</merge>