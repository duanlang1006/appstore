<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:paddingTop="3dip" android:paddingBottom="2dip">

	<ImageView android:id="@+id/iconView"
		android:layout_marginLeft="2dip" android:layout_width="48dip"
		android:scaleType="fitCenter" android:layout_height="48dip"
		android:layout_centerVertical="true" android:layout_alignParentLeft="true"
		android:layout_marginRight="8dip" android:layout_marginTop="6dip"
		android:src="@drawable/app_empty_icon" />

	<TextView android:id="@+id/summaryabel" android:layout_width="wrap_content"
		android:singleLine="true" android:layout_height="wrap_content"
		android:layout_toRightOf="@id/iconView" android:layout_marginRight="5dip"
		style="@style/AppCategory.Name" />

	<TextView android:id="@+id/infoLabel" android:singleLine="true"
		android:ellipsize="marquee" android:marqueeRepeatLimit="marquee_forever"
		android:layout_toRightOf="@id/iconView" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_below="@id/summaryabel"
		style="@style/AppCategory.TopApp" android:layout_marginTop="5dip" />
</RelativeLayout>