<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/appItemView" android:layout_width="fill_parent"
	android:layout_height="wrap_content" 
	android:gravity="center_vertical">
	<ImageView android:id="@+id/appIconView"
		android:layout_marginLeft="2dip" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_marginRight="2dip"
		android:layout_marginTop="10dip" android:layout_marginBottom="10dip"
		android:src="@drawable/dir_icon" />

	<TextView android:id="@+id/dirNameLabel" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:gravity="left|center_vertical"
		android:layout_marginRight="3dip" android:textColor="@color/dir_item_text_color" />

</LinearLayout>
