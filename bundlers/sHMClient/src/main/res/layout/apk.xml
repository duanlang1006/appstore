<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:paddingBottom="@dimen/TOP_PAD"
    android:paddingTop="@dimen/TOP_PAD"
    android:background="@android:color/white">
	<ImageView android:id="@+id/appIconView" android:padding="6dip"
		android:layout_width="60dip" android:scaleType="fitCenter"
		android:layout_height="60dip" android:layout_alignParentLeft="true" />

	<TextView android:id="@+id/appNameLabel" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:ellipsize="marquee"
		android:marqueeRepeatLimit="marquee_forever" android:singleLine="true"
		android:maxWidth="180dip" android:layout_alignParentTop="@id/appIconView"
		android:layout_toRightOf="@id/appIconView" style="@style/AppItem.Name" />

	<TextView android:id="@+id/appVersionLabel"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:minWidth="110dip" android:maxWidth="110dip"
		android:singleLine="true" android:layout_marginRight="5dip"
		android:layout_below="@id/appNameLabel" android:layout_toRightOf="@id/appIconView"
		android:layout_centerVertical="true" style="@style/AppItem.Author" />

	<TextView android:id="@+id/appSizeLabel" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_toRightOf="@id/appVersionLabel"
		android:layout_centerVertical="true" style="@style/AppItem.Author" />

	<TextView android:id="@+id/appInfoLabel" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:singleLine="true"
		android:layout_marginRight="5dip" android:layout_toRightOf="@id/appIconView"
		android:layout_alignBottom="@id/appIconView" style="@style/AppItem.Author" />

	<CheckBox android:id="@+id/chooseBox" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:focusable="false"
		android:layout_marginRight="3dip" android:layout_alignParentRight="true"
		android:layout_centerVertical="true" style="@style/Choose.CheckBox" />


</RelativeLayout>
  