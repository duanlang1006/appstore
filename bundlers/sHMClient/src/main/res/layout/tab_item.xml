<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:background="@drawable/tab_item_bg" android:paddingTop="2dip"
	android:paddingBottom="2dip">
	<ImageView android:id="@+id/tabfilter" android:scaleType="fitCenter"
		android:layout_marginLeft="2dip" android:layout_width="17dip"
		android:layout_height="20dip" android:layout_alignParentLeft="true"
		android:layout_marginTop="5dip" android:layout_marginBottom="5dip" />

	<TextView android:id="@+id/tabNameLabel" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_marginTop="2dip"
		android:gravity="center" android:textSize="@dimen/top_type_button_font_szie"
		android:textColor="@color/band_common_content"
		android:layout_toRightOf="@id/tabfilter" />

</RelativeLayout>
  