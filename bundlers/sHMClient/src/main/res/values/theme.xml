<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="CustomActionBarTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>  
        <item name="android:actionBarDivider">@null</item>  
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>  
        <item name="android:actionBarTabStyle">@style/MyActionBarTabs</item>
        <item name="android:actionBarTabBarStyle">@style/MyActionBarTabBars</item>  
        <item name="android:actionMenuTextColor">@android:color/white</item>  

        <!-- Support library compatibility -->  
        <item name="actionBarStyle">@style/MyActionBar</item>  
        <item name="actionBarDivider">@null</item>  
        <item name="actionBarTabTextStyle">@style/MyActionBarTabText</item>  
        <item name="actionBarTabStyle">@style/MyActionBarTabs</item>  
        <item name="actionBarTabBarStyle">@style/MyActionBarTabBars</item>  
        <item name="actionMenuTextColor">@android:color/white</item>  
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        
        <item name="android:background">@drawable/kapps_title</item>
	    <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
	    <item name="android:subtitleTextStyle">@style/MyActionBarSubTitleText</item>  
	    <item name="android:backgroundStacked">@android:color/white</item>
	    <item name="android:backgroundSplit">#ff0000</item>
  
        <!-- Support library compatibility -->
        <item name="background">@drawable/kapps_title</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="subtitleTextStyle">@style/MyActionBarSubTitleText</item>
        <item name="backgroundStacked">@android:color/white</item>
        <item name="backgroundSplit">#ff0000</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>
    
    <style name="MyActionBarSubTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@android:color/white</item>
    </style>
    
    <!-- ActionBar tabs text -->
    <style name="MyActionBarTabText" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@drawable/common_btn_font_color</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MyActionBarTabs" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_example</item>
    </style>
    
    <style name="MyActionBarTabBars" parent="@style/Widget.AppCompat.ActionBar.TabBar">
        <item name="android:showDividers">none</item>
    </style>

</resources>