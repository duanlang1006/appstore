<resources>
    <style name="TextAppearance">
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?android:textColor</item>
        <item name="android:textColorHighlight">?android:textColorHighlight</item>
        <item name="android:textColorHint">?android:textColorHint</item>
        <item name="android:textColorLink">?android:textColorLink</item>
    </style>


    <style name="TextAppearance.BlankPage" parent="@style/TextAppearance">
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textColor">@color/blank_page_text_color_light</item>
    </style>

    <style name="ActionBarCustom">
        <item name="android:background">@drawable/action_bar_bg_light</item>
    </style>
    <style name="ActionBarCustom.ActionBack">
        <item name="android:background">@drawable/action_bar_back_light</item>
    </style>
    <style name="ActionBarCustom.ActionMore">
        <item name="android:background">@drawable/action_mode_immersion_more_light</item>
    </style>
</resources>
